SELECT CONCAT(Doctors.Name, " ", Doctors.Surname), Specializations.Name FROM Doctors,Specializations, DoctorSpecializations
WHERE Specializations.ID = DoctorSpecializations.SpecializationID 
AND Doctors.ID = DoctorSpecializations.DoctorID;

SELECT Doctors.Surname, Doctors.Salary + Doctors.Premium FROM Doctors, Vocations 
WHERE Doctors.ID = Vocations.DoctorID AND Vocations.EndDate < CURDATE();

SELECT Wards.Name, Wards.IntensiveTreatment, Departments.Name FROM Wards, Departments
WHERE Wards.IntensiveTreatment = 1 AND Wards.DepartmentID = Departments.ID;

SELECT Departments.Name, Sponsors.Name FROM Departments,Sponsors,Donations 
