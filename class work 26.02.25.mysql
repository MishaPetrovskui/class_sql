CREATE TABLE Departments (
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100)
);

CREATE TABLE Doctors (
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100),
  Premium DECIMAL,
  Salary DECIMAL,
  Surname VARCHAR(100),
  DepartmentID INT,
  FOREIGN KEY (DepartmentID) REFERENCES Departments(ID)
);
CREATE TABLE Sponsors(
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100)
);

CREATE TABLE Donations (
  ID INT AUTO_INCREMENT KEY,
  Amount INT,
  Dates DATE,
  DepartmentID INT,
  SponsorID INT,
  FOREIGN KEY (SponsorID) REFERENCES Sponsors(ID),
  FOREIGN KEY (DepartmentID) REFERENCES Departments(ID)
);

CREATE TABLE Wards (
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100),
  DepartmentID INT,
  IntensiveTreatment BOOL,
  FOREIGN KEY (DepartmentID) REFERENCES Departments(ID)
);

CREATE TABLE Specializations (
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100)
);

CREATE TABLE DoctorSpecializations (
  ID INT AUTO_INCREMENT KEY,
  DoctorID INT,
  SpecializationID INT,
  FOREIGN KEY (SpecializationID) REFERENCES Specializations(ID),
  FOREIGN KEY (DoctorID) REFERENCES Doctors(ID)
);

CREATE TABLE Vocations(
  ID INT AUTO_INCREMENT KEY,
  EndDate Date,
  StartDate Date,
  DoctorID INT,
  FOREIGN KEY (DoctorID) REFERENCES Doctors(ID)
);

CREATE TABLE Diseases(
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100),
  Severity INT,
  IsInfectious BOOL
);

CREATE TABLE Examination(
  ID INT AUTO_INCREMENT KEY,
  Name VARCHAR(100),
  DayOfWeek VARCHAR(50),
  TimeStart Time,
  TimeEnd Time,
  DoctorsID INT,
  DiseasesID INT,
  WardsID INT,
  FOREIGN KEY (WardsID) REFERENCES Wards(ID),
  FOREIGN KEY (DoctorsID) REFERENCES Doctors(ID),
  FOREIGN KEY (DiseasesID) REFERENCES Diseases(ID)
);

